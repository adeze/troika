{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["./*"],
      "troika-core": ["../troika-core/src"],
      "troika-animation": ["../troika-animation/src"],
      "troika-three-utils": ["../troika-three-utils/src"],
      "troika-worker-utils": ["../troika-worker-utils/src"],
      "troika-*": ["../*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
