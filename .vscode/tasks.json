      "type": "shell",
      "command": "npm run clean && npm run bootstrap && npm run build",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "ci:local",
      "type": "shell",
      "command": "npm run build && npm test && npm run lint && npm run build-examples",
      "group": "test",
      "problemMatcher": [],
